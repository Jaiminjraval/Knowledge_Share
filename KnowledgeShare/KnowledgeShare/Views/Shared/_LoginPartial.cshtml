@using Microsoft.AspNetCore.Identity
@using KnowledgeShare.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User);

        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Profile" asp-action="Index" title="Manage">Hello @currentUser.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>

        @if (currentUser.Role == "Learner")
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="SessionRequests" asp-action="MySessions">My Sessions</a>
            </li>
        }
        @if (currentUser.Role == "Tutor")
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="SessionRequests" asp-action="MyRequests">My Requests</a>
            </li>
        }
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>

