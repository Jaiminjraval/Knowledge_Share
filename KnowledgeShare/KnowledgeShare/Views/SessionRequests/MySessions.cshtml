@model IEnumerable<KnowledgeShare.Models.SessionRequest>
@{
    ViewData["Title"] = "My Sessions";
    var allUsers = ViewBag.Users as List<KnowledgeShare.Data.ApplicationUser> ?? new List<KnowledgeShare.Data.ApplicationUser>();
}

<h1>My Sessions</h1>
<p>This page shows the status of requests you have sent to tutors.</p>

<table class="table">
    <thead>
        <tr>
            <th>Tutor</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            var tutor = allUsers.FirstOrDefault(u => u.Id == request.TutorId);
            <tr>
                <td>@(tutor?.Name ?? "Unknown Tutor")</td>
                <td>
                    @request.Status
                    @if (request.Status == RequestStatus.Approved)
                    {
                        <small class="d-block text-muted">Contact: @(tutor?.Email)</small>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

